<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="7dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/deleteAnnot"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:background="@drawable/stroke_bk_black"

            android:textColor="#ff0000"
            android:textSize="24sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/clearFieldInputAnnot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="поле 'Наименование покупки' не должно быть пустым"
        android:textColor="#ff0000"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="10sp"
        android:visibility="invisible"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <AutoCompleteTextView
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:singleLine="true"
            android:hint="Наименование покупки"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/editCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:inputType="numberDecimal"
                android:hint="Цена"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/okAnnot"
            android:background="@drawable/stroke_bk_black"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="OK"/>

        <Button

            android:id="@+id/cancelAnnot"
            android:background="@drawable/stroke_bk_black"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="ОТМЕНА"/>

    </LinearLayout>

</LinearLayout>